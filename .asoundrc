pcm.!default {
    type pulse
}

pcm.pulse {
    type pulse
}

ctl.!default {
    type pulse
}

ctl.pulse {
    type pulse
}

pcm.monitor {
    type asym
    capture.pcm {
        type pulse
        device win_out.monitor
    }
    playback.pcm "null"
    hint.description "Monitor for PulseAudio"
}

ctl.monitor {
    type pulse
}

pcm.mic {
    type asym
    capture.pcm {
        type pulse
        device win_in
    }
    playback.pcm "null"
    hint.description "Input from selected Device"
}

ctl.mic {
    type pulse
}

defaults.pcm.rate_converter="speexrate"
