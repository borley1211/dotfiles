pcm.!default {
    pcm "hw:0,0"
    format S32_LE
    channels 2
}

pcm.pulse {
    type pulse
}

ctl.!default {
    type pulse
}

ctl.pulse {
    type pulse
}

pcm.monitor {
    type asym
    capture.pcm {
        type pulse
        device alsa_out.monitor
    }
    playback.pcm "null"
    hint.description "Monitor for PulseAudio"
}

ctl.monitor {
    type pulse
}

pcm.mic {
    type asym
    capture.pcm {
        type pulse
        device alsa_in
    }
    playback.pcm "null"
    hint.description "Input from selected Device"
}

ctl.mic {
    type pulse
}

defaults.ctl.card 0
defaults.pcm.card 0
defaults.pcm.device 0
defaults.pcm.rate_converter="speexrate"
